##############################################################################
# SKouter Backend 통합 환경 변수 설정 파일
# 실제 사용 시 .env 파일로 복사하고 값을 수정하세요
# cp .env.example .env
##############################################################################

#==============================================================================
# Spring Boot (Java Backend) 설정
#==============================================================================

# 데이터베이스
spring.datasource.url=jdbc:mariadb://localhost:3306/skouter
spring.datasource.username=skouter
spring.datasource.password=skouter123
spring.datasource.driver-class-name=org.mariadb.jdbc.Driver

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true

# Redis (Spring)
spring.redis.host=localhost
spring.redis.port=16379
spring.redis.timeout=60000ms
spring.redis.jedis.pool.max-active=8
spring.redis.jedis.pool.max-idle=8
spring.redis.jedis.pool.min-idle=0

# JWT 토큰 설정 (256비트 이상의 안전한 값으로 설정)
jwt.secret=TODO_SET_JWT_SECRET_KEY_HERE_AT_LEAST_256_BITS_LONG_VERY_IMPORTANT_FOR_SECURITY
jwt.expiration=3600000
jwt.refresh-expiration=604800000

# FastAPI 연동
fastapi.base-url=http://localhost:8001
fastapi.timeout=30000

# 서버 포트
server.port=8080
server.servlet.context-path=/

# 로깅
logging.level.root=INFO
logging.level.com.skouter=DEBUG

#==============================================================================
# FastAPI (Python Backend) 설정
#==============================================================================

# 애플리케이션
APP_NAME=Skouter AI Backend
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# FastAPI 서버
API_HOST=0.0.0.0
API_PORT=8000

# Spring Boot 연동
SPRING_BOOT_URL=http://localhost:8080

# 데이터베이스 (Python)
DATABASE_URL=mysql+pymysql://skouter:skouter123@localhost:3306/skouter
DB_DRIVER=mysql+pymysql
DB_USER=skouter
DB_PASSWORD=skouter123
DB_HOST=localhost
DB_PORT=3306
DB_NAME=skouter

# Redis (Python)
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:16379

# Qdrant 벡터 DB
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=qdrant-key-12345
QDRANT_COLLECTION_NAME=job_postings
QDRANT_URL=http://localhost:6333

# OpenAI API
OPENAI_API_KEY=sk-TODO_SET_YOUR_KEY_HERE
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# LangChain
LANGCHAIN_VERBOSE=False
LANGCHAIN_MEMORY_TYPE=buffer

#==============================================================================
# 주의사항
#==============================================================================
# 1. 프로덕션 환경에서는 안전한 암호화된 값으로 변경하세요
# 2. API 키는 절대 버전 관리에 포함하지 마세요 (.env는 .gitignore에 포함됨)
# 3. JWT_SECRET은 최소 256비트의 강력한 값으로 설정하세요
# 4. Redis 포트는 Windows 제외 포트 범위를 피하기 위해 16379를 사용합니다
